{
  "name": "opencode-mobile",
  "main": "expo-router/entry",
  "version": "1.4.1",
  "scripts": {
    "start": "expo start -g",
    "start:tunnel": "expo start -g --tunnel",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "build:ios:local": "eas build -p ios --profile preview --local --non-interactive",
    "build:ios:prod": "eas build -p ios --profile production --local --non-interactive",
    "submit:ios": "eas submit -p ios --non-interactive",
    "lint": "expo lint",
    "doctor": "npx expo-doctor",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:ci": "jest --no-watch --watchAll=false --silent",
    "generate-api": "opencode generate > src/api/opencode_api.json && openapi-ts -i src/api/opencode_api.json -o src/api -c @hey-api/client-fetch",
    "events": "tsx scripts/event-listener.ts",
    "ota-host": "tsx scripts/ota-host.ts",
    "ota-host:dev": "tsx scripts/ota-host.ts --dev --port 8443",
    "build:ota": "npm run build:ios:local && npm run ota-host -- --once",
    "build:ota:dev": "npm run build:ios:local && npm run ota-host:dev -- --once",
    "opencode:start": "screen -dmS opencode opencode serve --hostname 0.0.0.0 --print-logs --port 4096 --log-level DEBUG",
    "opencode:stop": "screen -S opencode -X quit",
    "expo:start-bg": "screen -dmS expo npx expo start -g --tunnel",
    "expo:stop": "screen -S expo -X quit",
    "expo:logs": "screen -S expo -X hardcopy /tmp/expo.log && cat /tmp/expo.log",
    "opencode:logs": "screen -S opencode -X hardcopy /tmp/opencode.log && cat /tmp/opencode.log",
    "events:start": "screen -dmS events npx tsx scripts/event-listener.ts --server http://localhost:4096 --output /tmp/events.jsonl",
    "events:stop": "screen -S events -X quit",
    "events:logs": "screen -S events -X hardcopy /tmp/events.log && cat /tmp/events.log",
    "events:show": "cat /tmp/events.jsonl"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@hey-api/client-fetch": "^0.13.1",
    "@octokit/rest": "^22.0.0",
    "@react-native-async-storage/async-storage": "^2.1.2",
    "@react-navigation/bottom-tabs": "^7.3.10",
    "@react-navigation/elements": "^2.3.8",
    "@react-navigation/native": "^7.1.6",
    "@shopify/flash-list": "1.7.6",
    "@types/react-syntax-highlighter": "^15.5.13",
    "adm-zip": "^0.5.16",
    "bplist-parser": "^0.3.2",
    "date-fns": "^4.1.0",
    "expo": "53.0.22",
    "expo-blur": "~14.1.5",
    "expo-clipboard": "~7.1.5",
    "expo-constants": "~17.1.7",
    "expo-dev-client": "~5.2.4",
    "expo-font": "~13.3.2",
    "expo-haptics": "~14.1.4",
    "expo-image": "~2.4.0",
    "expo-image-picker": "~16.1.4",
    "expo-linear-gradient": "~14.1.5",
    "expo-linking": "~7.1.7",
    "expo-notifications": "~0.31.4",
    "expo-router": "~5.1.5",
    "expo-secure-store": "~14.2.4",
    "expo-splash-screen": "~0.30.10",
    "expo-status-bar": "~2.2.3",
    "expo-symbols": "~0.4.5",
    "expo-system-ui": "~5.0.11",
    "expo-web-browser": "~14.2.0",
    "express": "^5.1.0",
    "plist": "^3.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-native": "^0.79.5",
    "react-native-code-highlighter": "^1.3.0",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-markdown-display": "^7.0.2",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-sse": "^1.2.1",
    "react-native-web": "^0.20.0",
    "react-native-webview": "13.13.5",
    "react-syntax-highlighter": "^15.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@hey-api/openapi-ts": "^0.80.14",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.2.2",
    "@types/adm-zip": "^0.5.7",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/plist": "^3.0.5",
    "@types/react": "~19.0.10",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.25.0",
    "eslint-config-expo": "~9.2.0",
    "jest": "^29.7.0",
    "jest-expo": "~53.0.10",
    "react-test-renderer": "^19.0.0",
    "tsx": "^4.20.4",
    "typescript": "~5.8.3"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup/jest.setup.ts"
    ],
    "collectCoverage": false,
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@sentry/react-native|native-base|react-native-svg|react-syntax-highlighter|react-native-code-highlighter)"
    ]
  },
  "expo": {
    "doctor": {
      "reactNativeDirectoryCheck": {
        "listUnknownPackages": false
      }
    }
  },
  "private": true
}
